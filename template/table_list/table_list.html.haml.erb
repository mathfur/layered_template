// <%= table_name %>
%table.entry_show.table.table-striped.table-bordered.table-condense.<%= table_name %>
  <%- t_attrs.each do |name, items, opts| -%>
  %tr
    <%- case name -%>
    <%- when :row -%>
    <%- if opts[:header] -%>
    %th.'<%= items.map{|i| i.class}.join(' ') %>'= <%= to_quote(opts[:header]) %>
    <%- end -%>
    %td.'<%= items.map{|i| i.class}.join(' ') %>'= <%= render(items) %>
    <%- else -%>
    <%- end -%>
  <%- end -%>
